- if flash[:notice]
  %p
    = flash[:notice]
    
= form_for Account.new do |f|
  = f.label :username, 'Username'
  = f.text_field :username
  %br
  = f.label :category, 'Category'
  = f.select :category, options_for_select(['Eating out', 'Drinking']),:class => 'category'
  %br
  = f.submit 'Submit'
